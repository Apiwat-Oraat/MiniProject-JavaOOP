    public void mouseEntered(MouseEvent e){

        if(e.getSource().equals(btn_employee)){
            setColor(btn_employee);
        }
        if(e.getSource().equals(btn_material)){
            setColor(btn_material);
        }
        if(e.getSource().equals(btn_project)){
            setColor(btn_project);
        }
    }
    private void btn_singoutMouseClicked(java.awt.event.MouseEvent evt) {
        if(evt.getSource().equals(btn_singout)){
            new Login().setVisible(true);
            this.dispose();
        }

    }
     public void setColor(JPanel panel){
            panel.setBackground(new Color(34, 44, 51));
            System.out.println("event Action1");
        }
        public void resetColor(JPanel panel){
            panel.setBackground(new Color(29, 38, 45));
            System.out.println("event Action2");
        }
        public void switchPanel(String panelName) {
            CardLayout cardlayout = (CardLayout) mainPanel.getLayout();
            cardlayout.show(mainPanel, panelName);
        }

    }

